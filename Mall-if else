#include <stdio.h>
#include<conio.h>
int main()
{
  float amount=0.0;
  printf("\n enter your account balance=");
  scanf("%f", &amount);
  if(amount>10000)
  {
    printf("\n\t welcome to mall");
  }
  else
  {
    printf("\n\n\t minimum balance required to shop is 10000+\n");
  }
  getch();
  printf("\n\n Thanks for visit!!!");
  getch();
  return 0;
}

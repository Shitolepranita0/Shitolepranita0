#include <stdio.h>
#include <conio.h>
int main()
{
  int r=0,c=0,cnt=0;
  printf("\n enter no for count of row and columns=");
  scanf("%d", &cnt);
  printf("\n\n pattern is=>\n\n");
  for(r=1;r<=cnt;r++)
  {
    for(c=1;c<=cnt;c++)
    {
      if(r==1||r==cnt||r==c)
      {
        printf(" * ");
      }
      else
      {
        printf("   ");
      }
    }
  printf("\n");
  }
  printf("\n\n Thanks!!!\n");
  getch();
  return 0;
}
